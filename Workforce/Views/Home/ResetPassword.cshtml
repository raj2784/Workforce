@model Workforce.Models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPasword";
    Layout = "~/Views/_Layout.cshtml";
}


<body class="pb-0">
    <div class="wrapper-page">
        <div class="account-pages">
            <div class="account-box">
                <div class="account-logo-box bg-primary p-4">
                    <h3 class="m-0 text-center text-white">Reset Password</h3>
                </div>
                <div class="account-content">
                    @ViewBag.Success
                    @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { }))
                    {
                        @Html.ValidationSummary(true, "", new { calss = "text-danger" })

                        <div class="form-group row mb-4">
                            <div class="col-12">
                                <label for="password">New Password :</label>
                                @Html.PasswordFor(i => i.NewPasword, new { @class = "form-control form-control-sm", placeholder = "New Password", id = "textname" })
                                @Html.ValidationMessageFor(i => i.NewPasword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <div class="col-12">
                                <label for="password">Confirm Password :</label>
                                @Html.PasswordFor(i => i.ConfirmPassword, new { @class = "form-control form-control-sm", placeholder = "Confirm Password", id = "textname" })
                                @Html.ValidationMessageFor(i => i.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(i => i.Email, new { value = Model.Email })
                        <div class="form-group row text-center m-t-10">
                            <div class="col-12">
                                <input type="submit" class="btn btn-md btn-block btn-dark waves-effect waves-light" value="Reset" />
                            </div>
                        </div>

                    }


                </div>
            </div>
        </div>
        <!-- end account-box-->

    </div>
</body>

